<Page x:Class="MP3_Player.SearchTracks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:MP3_Player"
      Title="SearchTracks" Background="{StaticResource MacOSBackground}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Search" 
                   FontSize="32" FontWeight="Bold" 
                   Foreground="{StaticResource MacOSTextPrimary}"
                   FontFamily="Segoe UI" Margin="0,0,0,20"/>

        <!-- Search Box -->
        <Border Grid.Row="1" Background="{StaticResource MacOSCardBackground}" 
                CornerRadius="12" Margin="0,0,0,20" Padding="16"
                BorderBrush="{StaticResource MacOSBorder}" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" 
                                  Color="#10000000" Opacity="0.1"/>
            </Border.Effect>
            <TextBox x:Name="SearchTextBox" 
                     KeyDown="SearchTextBox_KeyDown" 
                     BorderThickness="0" 
                     Background="Transparent"
                     Foreground="{StaticResource MacOSTextPrimary}"
                     FontSize="16"
                     FontFamily="Segoe UI"
                     Padding="8,0"
                     VerticalContentAlignment="Center"
                     Height="44"/>
        </Border>

        <!-- Results -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl Name="ResultsSongs">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="12" Background="{StaticResource MacOSCardBackground}" 
                                BorderBrush="{StaticResource MacOSBorder}" 
                                BorderThickness="1" Margin="0,0,0,12"
                                Padding="16">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" 
                                                  Color="#10000000" Opacity="0.1"/>
                            </Border.Effect>
                            <Button Click="PlayMusic_Click" 
                                    Background="Transparent" 
                                    BorderBrush="Transparent" 
                                    HorizontalContentAlignment="Stretch"
                                    Cursor="Hand">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Add to Favorites" Click="Like_Click"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Album Art -->
                                    <Border Width="60" Height="60" CornerRadius="8" 
                                            Margin="0,0,16,0" ClipToBounds="True">
                                        <Ellipse Width="60" Height="60">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding Art}" 
                                                           Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Border>

                                    <!-- Track Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource MacOSTextPrimary}"
                                                   FontFamily="Segoe UI"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Artist}" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource MacOSTextSecondary}"
                                                   FontFamily="Segoe UI"
                                                   Margin="0,4,0,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
